SPK_NAME = njmon
SPK_VERS = 81
SPK_REV = 1

DEPENDS = cross/njmon

MAINTAINER = SynoCommunity
DESCRIPTION = nmon \(Nigel\'s performance Monitor\) is a performance monitoring tool for Linux. njmon outputs JSON format that a lot of tools use these days. It integrates well with saving data directly to InfluxDB and graphing with Grafana.
DISPLAY_NAME = njmon
STARTABLE = no

HOMEPAGE = http://nmon.sourceforge.net/
LICENSE = GPLv3

SPK_COMMANDS = bin/njmon

