+static float netravali(float t, float B, float C)
+{
+    if (t > 2) {
+        return 0;
+    } else {
+        float tt  = t * t;
+        float ttt = t * tt;
+        if (t < 1) {
+            return ((12 -  9 * B - 6 * C) * ttt +
+                   (-18 + 12 * B + 6 * C) * tt  +
+                     (6 -  2 * B)) / 6;
+        } else {
+            return     ((-B -  6 * C) * ttt +
+                     (6 * B + 30 * C) * tt +
+                   (-12 * B - 48 * C) * t +
+                     (8 * B + 24 * C)) / 6;
+        }
+    }
+}
