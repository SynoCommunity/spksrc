#!/bin/bash

FFMPEG_DIR="/var/packages/ffmpeg/target"
export PATH="${SYNOPKG_PKGDEST}/env/bin:${SYNOPKG_PKGDEST}/bin:${FFMPEG_DIR}/bin:${PATH}"

export LC_ALL=en_US.utf8
export LANG=en_US.utf8

if [ -f "${SYNOPKG_PKGVAR}/profile" ]; then
	source "${SYNOPKG_PKGVAR}/profile"
fi

exec python3 bazarr.py --no-update --config "${SYNOPKG_PKGVAR}/data" >> "${SYNOPKG_PKGVAR}/bazarr.log" 2>&1
